{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.4.1272.37030",
      "templateHash": "17712778270260346527"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "visionName": {
      "type": "string"
    },
    "SKU": {
      "type": "string",
      "defaultValue": "F0",
      "allowedValues": [
        "F0",
        "S1"
      ],
      "metadata": {
        "description": "SKU for Computer Vision API"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2021-10-01",
      "name": "[parameters('visionName')]",
      "location": "[parameters('location')]",
      "kind": "ComputerVision",
      "sku": {
        "name": "[parameters('SKU')]"
      },
      "properties": {
        "customSubDomainName": "[toLower(parameters('visionName'))]",
        "publicNetworkAccess": "Enabled"
      }
    }
  ],
  "outputs": {
    "visionApiKey": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts', parameters('visionName')), '2021-10-01').key1]"
    }
  }
}